{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": ["es6"],
		"allowJs": true,
		"outDir": "build",
		"moduleResolution": "node",
		"rootDir": "src",
		"strict": true,
		"typeRoots": ["./node_modules/@types", "./src/types"],
		"skipLibCheck": true,

		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true
	}
}
